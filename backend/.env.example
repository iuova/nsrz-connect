# Пример файла .env для бэкенда
# Скопируйте этот файл в .env и настройте переменные окружения

# Порт для запуска сервера
PORT=5000

# URL фронтенда для настройки CORS
FRONTEND_URL=http://localhost:3000

# Путь к файлу базы данных SQLite
DB_PATH=./db/database.sqlite

# Режим работы (development или production)
NODE_ENV=development

# Настройки для JWT аутентификации
JWT_SECRET=ваш_секретный_ключ_для_jwt
JWT_EXPIRATION=24h

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE=5242880  # 5MB 